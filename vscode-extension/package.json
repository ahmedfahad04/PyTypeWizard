{
	"name": "pytypewizard-vscode",
	"version": "0.0.2",
	"publisher": "Istiaq Ahmed Fahad",
	"engines": {
		"vscode": "^1.15.0"
	},
	"license": "MIT",
	"displayName": "pytypewizard-vscode",
	"description": "VSCode extension for Python Static Type Checking",
	"keywords": [
		"python",
		"pyre",
		"typechecking"
	],
	"main": "./out/main",
	"activationEvents": [
		"*"
	],
	"contributes": {
		"commands": [
			{
				"command": "pytypewizard.refreshErrors",
				"title": "Refresh PyTypeWizard Errors"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "pytypewizard-vscode",
					"title": "PyTypeWizard",
					"icon": "./asset/magic_wand.svg"
				}
			]
		},
		"views": {
			"pytypewizard-vscode": [
				{
					"id": "package-outline",
					"name": "Outline"
				},
				{
					"id": "pytypewizard-vscode",
					"name": "Type Errors",
					"type": "tree"
				}
			]
		},
		"configuration": {
			"title": "PyTypeWizard Settings",
			"properties": {
				"pyre.enabledErrorTypes": {
					"type": "array",
					"default": [
						"Incompatible variable type",
						"Incompatible parameter type",
						"Incompatible return type"
					],
					"description": "Select the error types to enable in PyTypeWizard diagnostics.",
					"items": {
						"type": "string",
						"enum": [
							"Incompatible variable type",
							"Incompatible parameter type",
							"Incompatible return type",
							"Invalid type",
							"Unbound name",
							"Incompatible attribute type",
							"Unsupported operand",
							"Call error"
						]
					}
				},
				"pytypewizard.geminiApiKey": {
					"type": "string",
					"default": "",
					"description": "API Key for Google Gemini"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./ && npm run copy-styles",
		"copy-styles": "mkdir -p out/styles && cp src/styles/*.css out/styles/",
		"watch": "tsc -watch -p ./",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"lint": "tslint --force -p ."
	},
	"dependencies": {
		"@google/generative-ai": "^0.21.0",
		"@vscode-elements/elements": "^1.9.0",
		"@vscode/python-extension": "^1.0.5",
		"axios": "^1.7.7",
		"vscode-languageclient": "^9.0.1",
		"which": "^4.0.0"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.44",
		"@types/node": "^18",
		"@types/vscode": "^1.73.0",
		"@types/which": "^3.0.4",
		"cson": "^4.1.0",
		"tslint": "^5.8.0",
		"tslint-microsoft-contrib": "^5.2.1",
		"typescript": "^5.5.4"
	},
	"files": [
		"out/**/*",
		"src/styles/**/*",
		"asset/**/*"
	]
}
